@{
    ViewBag.Title = "GPA Calculator";
}

@section scripts {
    <script>var testing = true;</script>

}

<script src="~/Scripts/knockout-3.4.2.js" type="text/javascript">

</script>

<body>


<div class="jumbotron">
    <h1>@ViewBag.Title</h1>
    <p class="lead">Welcome to my GPA Calc.</p>


    <form name=GPACalc2 action="">

        <div class="table">
            <div class="row">
                <div class="col-md-3"><p><strong>Class Name</strong><br /><em>Example: CS 101</em></p></div>
                <div class="col-md-3"><p><strong>Hours for course</strong><br /><em>3</em></p></div>
                <div class="col-md-3"><p><strong>Grade</strong><br /><em>C+</em></p></div>
                <div class="col-md-3"><p><strong></strong><br /><em></em></p></div>
                <div class="clearfix visible-md-block"></div>
            </div>
            <div class="row" data-bind="foreach: classList">
                <div class="col-md-3"><p><input size="15" data-bind="value: name" /></p></div>
                <div class="col-md-3"><p><input size="15" data-bind="value: hours" /></p></div>
                <div class="col-md-3"><p><input size="15" data-bind="value: grade" /></p></div>
                <div class="col-md-3"><p><button data-bind="click: remove">Remove Class</button></p></div>
                <div class="clearfix visible-md-block"></div>
            </div>
            <div class="row">
                <div class="col-md-3"><p><button data-bind="click: addClass">Add Class</button></p></div>
            </div>
            <div class="row">
                <div class="clearfix visible-md-block"></div>
                <p><button data-bind="click:calcGPA0" class="btn btn-primary btn-lg">Calculate GPA</button></p>
                <div class="col-md-4"><p><strong>Attempted Hours</strong></p></div>
                <div class="col-md-4"><p><strong>Quality Points</strong></p></div>
                <div class="col-md-4"><p><strong>Semester Gpa</strong></p></div>
                <div class="clearfix visible-md-block"></div>
                <div class="col-md-4"><p><input size="15" name=TotalQHRS defaultValue="" /></p></div>
                <div class="col-md-4"><p><input size="15" name=TotalTQPTS defaultValue="" /></p></div>
                <div class="col-md-4"><p><input size="15" name=SemesterGPA2 defaultValue="" /></p></div>
            </div>
        </div>

            



</form>


    <p>&nbsp;<p><hr><font size="1">University of Alabama GPA Calc</font>


</div>

</body>



<script src="~/Scripts/jsTest.js" type="text/javascript">
</script>
